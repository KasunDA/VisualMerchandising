<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tophawks.vm.visualmerchandising.Modules.VisualMerchandising.AddProduct">

    <include layout="@layout/app_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/productImageButton"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/add_btn" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".95"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

                <include layout="@layout/product_details" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/addProductButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="2.05"
            android:background="@drawable/roundrect">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/scrollLayout1"
                android:gravity="center"
                android:text="ADD PRODUCT"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
